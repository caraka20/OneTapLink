datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum GroupStatus {
  AKTIF
  NONAKTIF
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Group {
  id        Int         @id @default(autoincrement())
  nama      String      @db.VarChar(255)
  link      String
  jenis     String
  status    GroupStatus @default(AKTIF)
  createdAt DateTime    @default(now())
}

